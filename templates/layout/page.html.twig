{#
/**
 * Created by PhpStorm.
 * User: Stefan
 * Date: 14/02/2016
 * Time: 16:23
 * splitscreen layout with 3 maincontainers
 * left-fixed-container, sidebar en right-container
 */#}
{# facebook id #}
<div id="fb-root"></div>

<div class="wrapper">
    <input type="checkbox" id="sidebartoggler" name="" value="">

    <div class="container-wrap">
        {#
        /**
        * left side with logo-sitename and main-menu
        * only visible in the desktop version
        */
        #}
        <div class="left-fixed-container">
            <aside>
                <div class="row site-info">
                    {# block--system-branding-block.html.twig #}
                    {{ page.sitebranding }}
                </div>
                <div class="col-md-12 menu-container">
                    <div class="main-menu">
                            {#
                            /**
                            * main-menu.inc.twig
                            */
                            #}
                            {% include directory ~ '/templates/partials/main-menu.inc.twig' %}
                    </div>
                </div>
                <div class="copyright-desktop">
                    {# copyright.inc.twig #}
                    {% include directory ~ '/templates/partials/copyright.inc.twig' %}
                </div>
            </aside>
        </div>

        {#
        /**
        * navigation tree
        * only visible after clicking 'label for="sidebartoggler"' in main-menu
        */
        #}
        <div class="sidebar">
            {# menu block bomen #}
            {{ page.menubomen }}
        </div>

        {#
        /**
        * mobile section, visible only at less than 960px
        * _media-sitch-min961.scss does the trick
        */
        #}
        <div class="mobile-version-wrap">
            <nav class="navbar navbar-default navbar-fixed-top">
                <div class="container-fluid">
                    {# Toggle get grouped for better mobile display #}
                    {# hamburger.inc.twig #}
                    {% include directory ~ '/templates/partials/hamburger.inc.twig' %}

                    {# Collect the nav links, forms, and other content for toggling #}
                    <div class="collapse navbar-collapse" id="bs-example-navbar-collapse-1">
                        <ul class="nav navbar-nav">
                            {# main-menu.inc.twig #}
                            {% include directory ~ '/templates/partials/main-menu.inc.twig' %}
                            <li class="dropdown">
                                <a href="#" class="dropdown-toggle" data-toggle="dropdown" role="button"
                                   aria-haspopup="true"
                                   aria-expanded="false">Boomverzorging <span class="caret"></span></a>
                                <ul class="dropdown-menu">
                                    {# menu-sidebar-dropdown.inc.twig #}
                                    {% include directory ~ '/templates/partials/menu-sidebar-dropdown.inc.twig' %}
                                </ul>
                            </li>
                        </ul>
                    </div>
                    {# end of .navbar-collapse #}
                </div>
                {# end of container-fluid #}
            </nav>

            <header class="mobile-header">
                <div class="mobile-sitename">
                    <h1>ARBOR-SERVICE</h1>
                </div>
                <div class="mobile-core-business">
                    <span>boomchirurgie en tuinonderhoud</span>
                </div>
            </header>
        </div>{# end of mobile-version-wrap #}

        {#
        /**
        * main content in the right container for both desktop and mobile devices
        */
        #}
        <div class="container right-container">
            <aside class="main-content">
                {# Action Links #}
                {% if action_links %}
                    {% block action_links %}
                        <ul class="action-links">{{ action_links }}</ul>
                    {% endblock %}
                {% endif %}

                {# Help #}
                {% if page.help %}
                    {% block help %}
                        {{ page.help }}
                    {% endblock %}
                {% endif %}

                {# Content #}
                {% block content %}
                    <a id="main-content"></a>
                    {{ page.content }}
                {% endblock %}
            </aside>

            {# visible on every page but not on the mobile version #}
            <div class="desktop-footer">

                {#
                /**
                * contact and facebook wrapper
                */
                #}
                <aside class="contact-facebook-wrapper">
                    <div class="row">
                        <div class="col-md-6 contact-wrap">
                            {# contact and gsm include #}
                            {% include directory ~ '/templates/partials/contact_data.inc.twig' %}
                            <i class="fa fa-phone-square"></i>{% include directory ~ '/templates/partials/gsm.inc.twig' %}
                        </div>

                        <div class="col-md-6 facebook-wrap">
                            {# facebook.inc.twig #}
                            {% include directory ~ '/templates/partials/facebook.inc.twig' %}
                        </div>
                    </div>
                </aside>
            </div>
        </div>
        {# end of main-content #}

        {# mobile footer #}
        <footer class="mobile-footer">
            <div class="container">
                {% include directory ~ '/templates/partials/contact_data.inc.twig' %}
                <div class="gsm">
                    <a href="tel:{% include directory ~ '/templates/partials/gsm.inc.twig' %}" class="btn btn-default">
                        <i class="fa fa-phone-square fa-lg"></i>  {% include directory ~ '/templates/partials/gsm.inc.twig' %}
                    </a>
                </div>
                <div class="copyright">
                    {# copyright.inc.twig #}
                    {% include directory ~ '/templates/partials/copyright.inc.twig' %}
                </div>
            </div>
        </footer>

    </div>
</div>